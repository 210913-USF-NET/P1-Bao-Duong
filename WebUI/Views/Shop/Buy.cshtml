@model IEnumerable<Models.Size>

@{
    ViewData["Title"] = "Buy";

    var username = TempData["Username"];
    TempData.Keep();
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/slider.css">
</head>
<body>
    <p>
        <a asp-action="Index">Back to list</a>
    </p>

    <table class="table">
        <form asp-action="Buy">
            <div class="d-flex flex-row">
                <select class="form-control" id="Size" name="Size" required>
                    <option value="">Select Size</option>
                    @foreach (var size in Model)
                    {
                        <option name="size">@size.ClothingSize</option>
                    }
                </select>

                <div class="form-group">
                    <input class="form-control" name="quant" value="1" pattern="[1-100]*" required />
                    @Html.Raw(TempData["msg"])
                </div>

                <div class="form-group">
                    <input type="submit" value="Add to cart" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </table>

    @if ((int)TempData["Id"] == 1)
    {

        <!-- Slideshow container -->
        <div class="slideshow-container">

            <!-- Full-width images with number and caption text -->
            <div class="mySlides">
                <img src="~/img/Warm Up Hoodie.jpg" style="display: block; margin-left: auto; margin-right: auto; width: 50%" />
            </div>

            <div class="mySlides" style="display: none;">
                <img src="~/img/Warm Up Hoodie On Body.jpg" style="display: block; margin-left: auto; margin-right: auto; width: 60%" />
            </div>

            <!-- Next and previous buttons -->
            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </div>

        <script>
            var slideIndex = 1;
            showSlides(slideIndex);

            // Next/previous controls
            function plusSlides(n) {
                showSlides(slideIndex += n);
            }

            // Thumbnail image controls
            function currentSlide(n) {
                showSlides(slideIndex = n);
            }

            function showSlides(n) {
                var i;
                var slides = document.getElementsByClassName("mySlides");
                var dots = document.getElementsByClassName("dot");
                if (n > slides.length) { slideIndex = 1 }
                if (n < 1) { slideIndex = slides.length }
                for (i = 0; i < slides.length; i++) {
                    slides[i].style.display = "none";
                }
                for (i = 0; i < dots.length; i++) {
                    dots[i].className = dots[i].className.replace(" active", "");
                }
                slides[slideIndex - 1].style.display = "block";
                dots[slideIndex - 1].className += " active";
            }
        </script>
    }
    else if ((int)TempData["Id"] == 2)
    {

        <!-- Slideshow container -->
        <div class="slideshow-container">

            <!-- Full-width images with number and caption text -->
            <div class="mySlides">
                <img src="~/img/Warm Up Pants.jpg" style="display: block; margin-left: auto; margin-right: auto; width: 50%" />
            </div>

            <div class="mySlides" style="display: none;">
                <img src="~/img/Warm Up Pants On Body.jpg" style="display: block; margin-left: auto; margin-right: auto; width: 60%" />
            </div>

            <!-- Next and previous buttons -->
            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </div>

        <script>
            var slideIndex = 1;
            showSlides(slideIndex);

            // Next/previous controls
            function plusSlides(n) {
                showSlides(slideIndex += n);
            }

            // Thumbnail image controls
            function currentSlide(n) {
                showSlides(slideIndex = n);
            }

            function showSlides(n) {
                var i;
                var slides = document.getElementsByClassName("mySlides");
                var dots = document.getElementsByClassName("dot");
                if (n > slides.length) { slideIndex = 1 }
                if (n < 1) { slideIndex = slides.length }
                for (i = 0; i < slides.length; i++) {
                    slides[i].style.display = "none";
                }
                for (i = 0; i < dots.length; i++) {
                    dots[i].className = dots[i].className.replace(" active", "");
                }
                slides[slideIndex - 1].style.display = "block";
                dots[slideIndex - 1].className += " active";
            }
        </script>
    }
</body>
</html>


