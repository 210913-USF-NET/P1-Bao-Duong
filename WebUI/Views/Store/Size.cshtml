@model IEnumerable<Models.Size>

@{
    ViewData["Title"] = "Size";

    var username = TempData["Username"];
    TempData.Keep();
}

<h1>Size</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClothingSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SizeQuantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClothingSize)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SizeQuantity)
                </td>
                <td>
                    <form asp-action="Size">
                        <div class="d-flex flex-row">
                            <div class="form-group">
                                <input class="form-control" name="refill" />
                            </div>
                            <div class="form-group">
                                <input type="hidden" class="form-control" name="id" value="@item.Id"/>
                                <div class="form-group">
                                    <input type="submit" value="Refill" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>
