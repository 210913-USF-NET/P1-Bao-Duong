@model IEnumerable<WebUI.Models.OrderVM>

@{
    ViewData["Title"] = "Order";

    var username = TempData["Username"];
    TempData.Keep();
}

<h1>Order</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Item)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>@Html.ActionLink("Sort price by ascending", "Order", new { ascending = true })</p>
<p>@Html.ActionLink("Sort price by descending", "Order", new { descending = true })</p>

<p>
    <a asp-action="Index">Back to list</a>
</p>
